<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="ticket">
                <header>
                    <button string="Asignar" name="do_assign" type="object"  states = "nuevo"/>
                    <button string="En proceso" name="proceso" type="object"  states = "asignado"/>
                    <button string="Pendiente" name="pendiente" type="object"  states = "asignado,proceso"/>
                    <button string="Finalizar" name="resuelto" type="object"  states = "nuevo,asignado,proceso,pendiente"/>
                    <button string="Cancelar" name="cancelado" type="object" attrs="{'invisible':[('state','=', 'cancelado')]}"/>
                    <field name = "state" widget= "statusbar"/>
                </header>
                <sheet>
                    <div class = "oe_title">
                        <h1>
                            <field name = "name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name = "date"/>
                            <field name = "date_limit"/>
                            <field name = "state"/>
                        </group>
                        <group>
                            <field name = "user_id"/>
                            <field name = "assigned"/>
                            <field name = "ticket_qty"/>
                            <field name = "time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string = "Description">
                            <field name = "description"/>
                            <group>
                                <field name="tag_name"/>
                                <button string="create tag" name="create_tag" type="object" />
                            </group>
                            <field name = "tag_ids" context = "{'form_view_ref':'helpdesk_oscarindias.view_helpdesk_ticket_tag_simple_form'}" options="{'no_create': True}"/>
                        </page>
                        <page string = "actions">
                            <field name = "action_ids">
                                <tree editable = "bottom">
                                    <field name = "name"></field>
                                    <field name = "date"></field>
                                    <field name = "time"></field>
                                </tree>
                                <form>
                                    <group name = "action">
                                        <field name = "name"></field>
                                        <field name = "date"></field>
                                        <field name = "time"></field>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string = "Quality">
                            <group string = "action_corrective">
                                <field name= "action_corrective" nolabel = '1'/>
                            </group>
                            <group string = "action_preventive">
                                <field name= "action_preventive" nolabel = '1'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string = "ticket">
                <field name = "name"/>
                <field name = "user_id"/>
                <filter string = "Assigned" name = "assigned" domain = "[('user_id','!=', False)]"/>
                <filter string = "No date limit" name = "date_limit" domain = "[('date_limit','!=', False)]"/>
                <group string="Group by">
                    <filter string = "Date limit" name = "date_limit" context = "{'group_by':'date_limit'}"/>
                    <filter string = "Assigned to" name = "user_id" context = "{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string = "timesheet">
                <field name = "user_id" type = "row"/>
                <field name = "date" interval = "month" type = "col"/>
                <field name = "time" type = "measure" widget = "float_time"></field>

            </pivot>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string= "tickets">
                <field name = "name" />
                <field name = "date"/>
                <field name = "state"></field>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_graph" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string = "Ticket">
                <field name = "user_id"/>
                <field name = "time" type = "measure" widget = "float_time"></field>
            </graph>
        </field>
    </record>

    <record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" date_start ="date" color="user_id" hide_time="true"
                event_limit ="5">
                <field name = "user_id" avatar_field = "image_128"/>
                <field name="name"/>
                <field name="user_id" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="user_id">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_title">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="date"/>
                                <field name="time"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <field name="user_id" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    

</odoo>