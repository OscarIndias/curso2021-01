<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="ticket">
                <header>
                    <button string="Asignar" name="do_assign" type="object"  states = "nuevo"/>
                    <button string="En proceso" name="proceso" type="object"  states = "asignado"/>
                    <button string="Pendiente" name="pendiente" type="object"  states = "asignado,proceso"/>
                    <button string="Finalizar" name="resuelto" type="object"  states = "nuevo,asignado,proceso,pendiente"/>
                    <button string="Cancelar" name="cancelado" type="object"   attrs="{'invisible':[('state','=', 'cancelado')]}"/>
                    <field name = "state" widget= "statusbar"/>
                </header>
                <sheet>
                    <div class = "oe_title">
                        <h1>
                            <field name = "name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name = "date"/>
                            <field name = "date_limit"/>
                            <field name = "state"/>
                        </group>
                        <group>
                            <field name = "user_id"/>
                            <field name = "assigned"/>
                            <field name = "ticket_qty"/>
                            <field name = "time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string = "Description">
                            <field name = "description"/>
                            <group>
                                <field name="tag_name"/>
                                <button string="create tag"
                                name="create_tag"
                                type="object" />
                            </group>
                            <field name = "tag_ids"/>
                        </page>
                        <page string = "actions">
                            <field name = "action_ids"/>
                        </page>
                        <page string = "Quality">
                            <group string = "action_corrective">
                                <field name= "action_corrective" nolabel = '1'/>
                            </group>
                            <group string = "action_preventive">
                                <field name= "action_preventive" nolabel = '1'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>