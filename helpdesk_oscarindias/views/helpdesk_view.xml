<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="ticket">
                <header>
                    <field name = "estado" widget= "statusbar"/>
                </header>
                <sheet>
                    <div class = "oe_title">
                        <h1>
                            <field name = "name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name = "date"/>
                            <field name = "date_limit"/>
                        </group>
                        <group>
                            <field name = "assigned"/>
                            <field name = "time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string = "Description">
                            <field name = "description"/>
                        </page>
                        <page string = "Quality">
                            <group string = "action_corrective">
                                <field name= "action_corrective" nolabel = '1'/>
                            </group>
                            <group string = "action_preventive">
                                <field name= "action_preventive" nolabel = '1'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="date" />
                    <field name="estado" />
                </tree>
        </field>
    </record>
</odoo>